---
import { Icon } from "astro-icon/components";
---

<section class="support">
    <h2>¿Quién nos respalda?</h2>
    <div class="supports">
        <article class="brand">
            <Icon name="apple" width="100" height="100"/>
        </article>
        <article class="brand">
            <Icon name="dell" width="100" height="100"/>
        </article>
        <article class="brand">
            <Icon name="hp" width="100" height="100"/>
        </article>
        <article class="brand">
            <Icon name="lenovo" width="100" height="100"/>
        </article>
        <article class="brand">
            <Icon name="logitech" width="100" height="100"/>
        </article>
        <article class="brand">
            <Icon name="microsoft" width="100" height="100"/>
        </article>
    </div>
</section>

<style>
    .support {
        width: 100%;
        display: flex;
        flex-direction: column;
        padding-block: 8rem;
        gap: 8rem;
        align-items: center;
    }

    .support > h2 {
        color: var(--secondary-color);
        font-size: 5rem;
    }

    .supports {
        display: flex;
        justify-content: space-around;
        width: 100%;
        color: var(--neutral-color)
    }
</style>